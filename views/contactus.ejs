<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SeraVision | İletişim</title>

    <link rel="icon" href="/logo/favicon.png">
    <link rel="stylesheet" href="/contactus/css/loadingscreen.css">
    <link rel="stylesheet" href="/contactus/css/style.css">
    <link rel="stylesheet" href="/contactus/css/togglemenu.css">
    <link rel="stylesheet" href="/contactus/css/responsive.css">
</head>
<body>
    
    <div class="loaderContainer">
        <div class="loader"></div>
    </div>

    <div class="container">
        <%- include("partials/_nav") %>

        <main>
            <section>
                <h1>İletişim</h1>
            </section>

            <div class="contact">
                <div class="left">
                    <div class="information">
                        <div class="icon">
                            <ion-icon name="mail-unread-outline"></ion-icon>
                        </div>

                        <div class="textBox">
                            <h3>E-Mail</h3>
                            <span>seravision@gmail.com</span>
                        </div>
                    </div>

                    <div class="information">
                        <div class="icon">
                            <ion-icon name="call-outline"></ion-icon>
                        </div>

                        <div class="textBox">
                            <h3>Telefon</h3>
                            <span>05333333333</span>
                        </div>
                    </div>

                    <div class="information">
                        <div class="icon">
                            <ion-icon name="location-outline"></ion-icon>
                        </div>

                        <div class="textBox">
                            <h3>Konum</h3>
                            <span>Ziya Gökalp Cd, Gazimağusa 99450</span>
                        </div>
                    </div>
                </div>

                <div class="right">
                    <div class="header"> Mail Gönder</div>
                    <div class="main">
                        <form method="dialog" id="formSendMail">
                            <div class="row">
                                <input type="text" name=""  required id="txtFullName" placeholder="Adınız">
                                <input type="email" name="" required id="txtEmailAdress" placeholder="Email Adresiniz">
                            </div>

                            <div class="row">
                                <input type="text" name="" required id="txtPhoneNumber" placeholder="Telefon Numaranız">
                                <input type="text" name="" required id="txtTextHeader" placeholder="Konu Başlığı">
                            </div>

                            <div class="row">
                                <textarea  placeholder=" Mesaj Girin" required name="" id="taText"></textarea>
                            </div>
                            
                            <div class="row">
                                <input type="submit" name="" id="btnSendEmail">
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div class="location">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3263.754991940533!2d33.94337071553994!3d35.11282836854099!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14dfc846e9f77b5d%3A0x60da1267303301ae!2zRHIuIEZhesSxbCBLw7zDp8O8ayBFbmTDvHN0cmkgTWVzbGVrIExpc2VzaQ!5e0!3m2!1str!2s!4v1679845594326!5m2!1str!2s" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>

            

            
        </main>

        <%- include("partials/_footer") %>
    </div>

    <%- include("partials/_togglemenu") %>
<script src="/contactus/js/main.js"></script>
<script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
<script>
    let loading = document.querySelector(".loaderContainer")
    window.addEventListener("load",()=>{
        setTimeout(() => {
            loading.style.opacity="0"
            setTimeout(() => {
                loading.style.display="none"
            }, 500);
        }, 1000);
    })
</script>
</body>
</html>