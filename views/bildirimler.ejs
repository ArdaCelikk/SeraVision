<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SeraVision | Panel</title>
    <link rel="stylesheet" href="/bildirimler/css/style.css">
    <link rel="stylesheet" href="/bildirimler/css/responsive.css">
    <link rel="stylesheet" href="/home/css/loadingscreen.css">
    <link rel="icon" href="/logo/favicon.png">
</head>

<body>
    <div class="loaderContainer">
        <div class="loader"></div>
    </div>
    <div class="container">
        <%- include("partials/_dashboardnav") %>


        <main>
            <div class="topbar">
                <div class="toggle">
                    <ion-icon name="menu-outline"></ion-icon>
                </div>


                <div class="user">
                    <img src="/default/user.png" alt="">
                </div>
            </div>


            <div class="alertContainer">
                <div class="alertBox">
                    <div class="alert">
                        <div class="top">
                            <div class="left">
                                <ion-icon name="leaf-outline" style="color:#295739"></ion-icon>
                            </div>
                            <div class="right">
                                <div class="header" style="color:#295739">
                                    Hiçbir Mesajınız Bulunmamakta
                                </div>
                                <div class="main">
                                </div>
                            </div>
                        </div>
                        <div class="footer">
                        </div>
                    </div>



                </div>
            </div>
        </main>

    </div>

    <script src="/bildirimler/js/main.js"></script>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    <script>
        let loading = document.querySelector(".loaderContainer")
        window.addEventListener("load", () => {
            setTimeout(() => {
                loading.style.opacity = "0"
                setTimeout(() => {
                    loading.style.display = "none"
                }, 500);
            }, 1000);
        })
    </script>
</body>

</html>